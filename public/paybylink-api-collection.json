{
  "info": {
    "name": "Pay By Link Public API",
    "description": "Complete collection for testing the Pay By Link Public API endpoints. This collection includes all CRUD operations for payment links management.",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://{{domainName}}.billingplatform.com/{{orgName}}/paybylink/1.0/publicapi",
      "type": "string"
    },
    {
      "key": "domainName",
      "value": "dev",
      "type": "string"
    },
    {
      "key": "orgName",
      "value": "acme-corp",
      "type": "string"
    },
    {
      "key": "accountId",
      "value": "67890",
      "type": "string"
    },
    {
      "key": "paymentLinkId",
      "value": "12345",
      "type": "string"
    },
    {
      "key": "invoiceId",
      "value": "54321",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Payment Links Management",
      "item": [
        {
          "name": "Create Payment Link",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"accountId\": {{accountId}},\n  \"invoiceId\": {{invoiceId}},\n  \"amount\": 100.00,\n  \"discountAmount\": 10.50,\n  \"taxAmount\": 5.25\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/payment-links",
              "host": ["{{baseUrl}}"],
              "path": ["payment-links"]
            },
            "description": "Creates a new payment link for an account and optionally an invoice. Returns the created payment link with its unique URL."
          },
          "response": []
        },
        {
          "name": "Create Payment Link (Account Only)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"accountId\": {{accountId}},\n  \"amount\": 250.00,\n  \"discountAmount\": 25.00,\n  \"taxAmount\": 12.50\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/payment-links",
              "host": ["{{baseUrl}}"],
              "path": ["payment-links"]
            },
            "description": "Creates a new payment link for an account without linking to a specific invoice."
          },
          "response": []
        },
        {
          "name": "Get Payment Link by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/payment-links/{{paymentLinkId}}",
              "host": ["{{baseUrl}}"],
              "path": ["payment-links", "{{paymentLinkId}}"]
            },
            "description": "Retrieves a payment link by its unique identifier. Returns payment link details including the URL, amounts, and creation source."
          },
          "response": []
        },
        {
          "name": "Update Payment Link",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 150.00,\n  \"discountAmount\": 15.00,\n  \"taxAmount\": 7.50\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/payment-links/{{paymentLinkId}}",
              "host": ["{{baseUrl}}"],
              "path": ["payment-links", "{{paymentLinkId}}"]
            },
            "description": "Updates an existing payment link with new amount and tax information. All fields are optional."
          },
          "response": []
        },
        {
          "name": "Delete Payment Link",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/payment-links/{{paymentLinkId}}",
              "host": ["{{baseUrl}}"],
              "path": ["payment-links", "{{paymentLinkId}}"]
            },
            "description": "Deletes a payment link by its unique identifier. Returns 204 No Content on success."
          },
          "response": []
        }
      ],
      "description": "Core CRUD operations for payment links management"
    },
    {
      "name": "Account Payment Links",
      "item": [
        {
          "name": "Get Payment Links for Account",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/accounts/{{accountId}}/payment-links",
              "host": ["{{baseUrl}}"],
              "path": ["accounts", "{{accountId}}", "payment-links"]
            },
            "description": "Retrieves all payment links associated with a specific account without any filtering."
          },
          "response": []
        },
        {
          "name": "Get Payment Links with Invoice Filter",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/accounts/{{accountId}}/payment-links?has_invoice=true",
              "host": ["{{baseUrl}}"],
              "path": ["accounts", "{{accountId}}", "payment-links"],
              "query": [
                {
                  "key": "has_invoice",
                  "value": "true",
                  "description": "Filter payment links that have an associated invoice"
                }
              ]
            },
            "description": "Retrieves payment links for an account that have an associated invoice."
          },
          "response": []
        },
        {
          "name": "Get Payment Links without Invoice",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/accounts/{{accountId}}/payment-links?has_invoice=false",
              "host": ["{{baseUrl}}"],
              "path": ["accounts", "{{accountId}}", "payment-links"],
              "query": [
                {
                  "key": "has_invoice",
                  "value": "false",
                  "description": "Filter payment links that do not have an associated invoice"
                }
              ]
            },
            "description": "Retrieves payment links for an account that do not have an associated invoice (ad-hoc payments)."
          },
          "response": []
        },
        {
          "name": "Get API Created Payment Links",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/accounts/{{accountId}}/payment-links?creation_source=api_created",
              "host": ["{{baseUrl}}"],
              "path": ["accounts", "{{accountId}}", "payment-links"],
              "query": [
                {
                  "key": "creation_source",
                  "value": "api_created",
                  "description": "Filter payment links created via API"
                }
              ]
            },
            "description": "Retrieves payment links for an account that were created through the API."
          },
          "response": []
        },
        {
          "name": "Get Payment Links with Combined Filters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/accounts/{{accountId}}/payment-links?has_invoice=true&creation_source=api_created",
              "host": ["{{baseUrl}}"],
              "path": ["accounts", "{{accountId}}", "payment-links"],
              "query": [
                {
                  "key": "has_invoice",
                  "value": "true",
                  "description": "Filter payment links that have an associated invoice"
                },
                {
                  "key": "creation_source",
                  "value": "api_created",
                  "description": "Filter payment links created via API"
                }
              ]
            },
            "description": "Retrieves payment links for an account with both invoice association and API creation source filters applied."
          },
          "response": []
        }
      ],
      "description": "Operations for retrieving payment links by account with various filtering options"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{apiToken}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set up environment variables if not already set",
          "if (!pm.environment.get('domainName')) {",
          "    pm.environment.set('domainName', 'dev');",
          "}",
          "if (!pm.environment.get('orgName')) {",
          "    pm.environment.set('orgName', 'acme-corp');",
          "}",
          "if (!pm.environment.get('accountId')) {",
          "    pm.environment.set('accountId', '67890');",
          "}",
          "if (!pm.environment.get('paymentLinkId')) {",
          "    pm.environment.set('paymentLinkId', '12345');",
          "}",
          "if (!pm.environment.get('invoiceId')) {",
          "    pm.environment.set('invoiceId', '54321');",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Basic response validation",
          "pm.test('Response time is less than 5000ms', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "pm.test('Response has correct content type', function () {",
          "    if (pm.response.code !== 204) {",
          "        pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
          "    }",
          "});",
          "",
          "// Store paymentLinkId from successful create operations",
          "if (pm.response.code === 201 && pm.request.method === 'POST') {",
          "    const response = pm.response.json();",
          "    if (response.paymentLinkId) {",
          "        pm.environment.set('paymentLinkId', response.paymentLinkId);",
          "        console.log('Stored paymentLinkId:', response.paymentLinkId);",
          "    }",
          "}"
        ]
      }
    }
  ]
}